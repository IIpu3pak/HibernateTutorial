<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="home_library_hibernate.domain.Book">
        <id name="id" column="id" type="java.lang.Integer">
            <generator class="increment"/>
        </id>
        <property name="title" column="title" type="java.lang.String"></property>
        <property name="description" column="description" type="java.lang.String"></property>
    </class>

    <class name="home_library_hibernate.domain.Author">
        <id name="id" column="id" type="java.lang.Integer">
            <generator class="increment"/>
        </id>
    </class>

    <class name="home_library_hibernate.domain.Genre">
        <id name="id" column="id" type="java.lang.Integer">
            <generator class="increment"/>
        </id>
    </class>
</hibernate-mapping>